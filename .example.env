# Application Settings
APP_PROJECT_NAME="FastAPI Service"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Production-grade FastAPI service with MongoDB"
APP_DEBUG=true
APP_HOST="0.0.0.0"
APP_PORT=8000
APP_API_V1_STR="/api/v1"

# MongoDB Settings
DB_MONGODB_URL="MongoDB url"
DB_MONGODB_DB_NAME="boilerplate_db"

# Security Settings
SECURITY_SECRET_KEY="your-super-secret-key-here-use-openssl-rand-hex-32-to-generate"
SECURITY_ALGORITHM="HS256"
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_MIN_LENGTH=8

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_TO_FILE=true
LOG_FILE_PATH="logs/app.log"

# CORS Settings
APP_BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Cache Settings
CACHE_ENABLED=true
CACHE_BACKEND="redis"
CACHE_DEFAULT_TIMEOUT=300

# Sentry Settings (if you're using Sentry)
LOG_SENTRY_ENABLED=True
LOG_SENTRY_DSN="sentry-dsn-here"
LOG_SENTRY_ENVIRONMENT="development"

# Email Settings
EMAIL_ENABLED=false
EMAIL_FROM_EMAIL="noreply@example.com"
EMAIL_FROM_NAME="Your App"